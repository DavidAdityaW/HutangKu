<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/bgitemhutang"
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:layout_width="220dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/namapiutang"
            android:layout_marginTop="16dp"
            android:textSize="22sp"
            android:textColor="#000000"
            android:text="David Aditya W"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/jumlahpiutang"
            android:textSize="20sp"
            android:textColor="#ADADAD"
            android:layout_marginTop="3dp"
            android:text="100.000,00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/deskripsipiutang"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="3dp"
            android:text="Membeli es krim dan kue"
            android:background="@drawable/bgdeskripsi"
            android:textStyle="italic"
            android:layout_width="wrap_content"
            android:layout_height="22dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="6dp"
        android:layout_marginTop="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tanggalpiutang"
            android:textSize="16sp"
            android:textColor="#F63EA5"
            android:layout_marginTop="8dp"
            android:text="Tomorrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>